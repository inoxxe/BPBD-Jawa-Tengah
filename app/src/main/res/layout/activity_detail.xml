<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="299dp"
                android:layout_marginBottom="36dp">

                <ImageView
                    android:id="@+id/detail_img_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_view"
                    android:scaleType="centerCrop"/>


                <com.github.ivbaranov.mfb.MaterialFavoriteButton
                    android:id="@+id/favorite_button"
                    android:layout_alignParentRight="true"
                    app:mfb_type="star"
                    app:mfb_color="white"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="17dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="72dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/detail_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Banjir di Sulsel Tewaskan 6 Orang, Ribuan Orang Mengungsi"
                        android:textSize="16dp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#ffffff"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/detail_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal"
                        android:text="Senin, 21 Jan 2019 | 12.30 WIB"
                        android:textColor="#fff"/>
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/detail_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/isi"
                android:textSize="14sp"
                android:textColor="#000"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="27dp"
                android:layout_marginBottom="27dp"/>

            <TextView
                android:layout_marginLeft="26dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tag :"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/detail_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="15dp">
            </android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e9e9e9"
                android:layout_marginRight="26dp"
                android:layout_marginLeft="26dp"/>

            <TextView
                android:layout_marginLeft="26dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baca Lainya"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e9e9e9"
                android:layout_marginRight="26dp"
                android:layout_marginLeft="26dp"/>
            
            <android.support.v7.widget.RecyclerView
                android:id="@+id/detail_related_news"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="29dp"
                android:layout_marginBottom="11dp">
            </android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e9e9e9"
                android:layout_marginRight="26dp"
                android:layout_marginLeft="26dp"/>
            <TextView
                android:id="@+id/lihat_semuanya"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Semuanya"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e9e9e9"
                android:layout_marginRight="26dp"
                android:layout_marginLeft="26dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

</ScrollView>